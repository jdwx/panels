{
  "name": "jdwx/panels",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "JDWX\\Panels\\": "src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "jetbrains/phpstorm-attributes": "^1.0",
    "phan/phan": "^5.5",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^12"
  },
  "require": {
    "php": ">=8.3.0",
    "jdwx/html5": "^1.0",
    "jdwx/web": "^3.0",
    "jdwx/web-pages": "^1.0"
  },
  "scripts": {
    "phan": "PHAN_ALLOW_XDEBUG=1 php -d xdebug.mode=off vendor/bin/phan --no-progress-bar -S --analyze-twice",
    "phpstan": "php -d xdebug.so vendor/bin/phpstan --no-progress",
    "test": "vendor/bin/phpunit tests",
    "coverage": "php -dxdebug.coverage_enable=1 -dxdebug.mode=coverage vendor/phpunit/phpunit/phpunit --display-warnings --display-deprecations --coverage-html coverage --coverage-filter src --no-configuration tests"
  }
}
